{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "http://example.com/userRegister.json",
    "type": "object",
    "properties": {
        "username": {
            "type": "string",
            "minLength": 1,
            "maxLength": 60
        },
        "email": {
            "type": "string",
            "maxLength": 60,
            "format": "email"
        },
        "password": {
            "type": "string",
            "minLength": 8,
            "maxLength": 20
        },
        "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 30
        },
        "bio": {
            "type": "string",
            "minLength": 1,
            "maxLength": 1000
        }
    },
    "additionalProperties": false,
    "required": [
        "username",
        "email",
        "password",
        "name",
        "bio"
    ]
}
